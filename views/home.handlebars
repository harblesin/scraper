<div class="card">
    <div class="row">
        <div class="col-4">
            <button class="btn btn-primary btn-lg btn-block" id="scrape">Scrape!</button>
        </div>
        <div class="col-4">
            <button class="btn btn-info btn-lg btn-block" id="pop">Populate</button>
        </div>
        <div class="col-4">
            <button class="btn btn-warning btn-lg btn-block" id="clear">Clear!</button>
        </div>
    </div>
    <div class="row">
        <div class="col-3">

        </div>
        <div class="col-4">
            {{#each items}}
            <hr>
            <h3 class="card-title" idNum="{{_id}}">{{title}}</h3>
            <hr>
            <a href="{{link}}">{{link}}</a>
            <hr>
            {{/each}}
        </div>
        <div class="col-3 notes">

        </div>

    </div>


</div>